@model IEnumerable<restauranteASP.CajaMovimiento_>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p class="pt-3 align-content-center">


    @Html.ActionLink("Mantenimiento Tipo Movimiento", "Index", "CajaTipoMoviento", null, new { @class = "btn btn-success" })
</p>
<p>
    @Html.ActionLink("Crear", "Create", null, new { @class = "btn btn-success", style = "width: 100px; background-color: green; text-transform:uppercase; border-radius:10px;" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Caja.usuario)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.monto)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.CajaTipoMoviento.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idTipoMedioPago)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idTipoMedioPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Caja.usuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CajaTipoMoviento.descripcion)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { @class = "btn btn-warning", style = " text-transform:uppercase; font-size: 15px; text-align:center; border-radius:10px; " })
                @Html.ActionLink("Details", "Details", new { @class = "btn btn-primary", style = " text-transform:uppercase; font-size: 15px; text-align:center; border-radius:10px; " })
                @Html.ActionLink("Delete", "Delete", new { @class = "btn btn-danger", style = " text-transform:uppercase; font-size: 15px; text-align:center; border-radius:10px;  " })
            </td>
        </tr>

    }

</table>
<p>
    @Html.ActionLink("Volver", "Index", "Cajas", null, new { @class = "btn btn-success", style = "width:120px" })
</p>


