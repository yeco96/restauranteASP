
@model System.Web.Mvc.HandleErrorInfo

    <div>

        <h4 class="text-danger">An error occurred while processing your request.</h4>

        <p class="text-danger">Error.@Model.Exception.Message</p>

        @Html.ActionLink("Volver", @Model.ActionName, @Model.ControllerName)

        <p class="pt-5">DETALLES</p>
        <p>Error.@Model.Exception</p>
    </div>


