@{
    ViewBag.Title = "Mantenimientos";
}
<link href="~/Styles/CRUDstyles.css" rel="stylesheet" />
    <div class="pt-4">
        <div class="row">
            <div class="col-6">
                <div class="card m-2 p-0">
                    <div class="card-body text-center">
                        <h5 class="card-title">Mesas</h5>
                        <p class="card-text">Mantenimiento de mesas, las mismas seran visibles a la hora de crear el pedido</p>

                        @Html.ActionLink("IR", "Index", "Mesas", null, new { @class = "btn btn-success", style = "width:120px" })


                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="card m-2 p-0">
                    <div class="card-body text-center">
                        <h5 class="card-title">Clientes</h5>
                        <p class="card-text">Mantenimiento de clientes, estos pueden usarse para facturar un pedido</p>
                        @Html.ActionLink("IR", "Index", "Clientes", null, new { @class = "btn btn-success", style = "width:120px" })
                    </div>
                </div>
            </div>
        
        </div>


        <div class="row pt-3">
            <div class="col-6">
                <div class="card m-2 p-0">
                    <div class="card-body text-center">
                        <h5 class="card-title">Inventario</h5>
                        <p class="card-text">Mantenimiento del inventario, catalogo de articulos, platos y servicios</p>

                        @Html.ActionLink("IR", "Index", "Articulo", null, new { @class = "btn btn-success", style = "width:120px" })

                    </div>
                </div>
            </div>

            <div class="col-6">
                <div class="card m-2 p-0">
                    <div class="card-body text-center">
                        <h5 class="card-title">Pedidos</h5>
                        <p class="card-text">Mantenimiento de Pedidos, se utliza para controlar los pedidos</p>
                        @Html.ActionLink("IR", "Index", "Pedido", null, new { @class = "btn btn-success", style = "width:120px" })
                    </div>
                </div>
            </div>

            <div class="col-6">
                <div class="card m-2 p-0">
                    <div class="card-body text-center">
                        <h5 class="card-title">Cajas</h5>
                        <p class="card-text">Mantenimiento de Cajas, se utliza para controlar las cajas reguistradoras</p>
                        @Html.ActionLink("IR", "Index", "Cajas", null, new { @class = "btn btn-success", style = "width:120px" })
                    </div>
                </div>
            </div>

            <div class="col-6">
                <div class="card m-2 p-0">
                    <div class="card-body text-center">
                        <h5 class="card-title">Usuarios</h5>
                        <p class="card-text">Mantenimiento de Usuarios, se utliza para controlar los Usuarios</p>
                        @Html.ActionLink("IR", "Index", "Usuarios", null, new { @class = "btn btn-success", style = "width:120px" })
                    </div>
                </div>
            </div>
        </div>

    </div>
