@model IEnumerable<restauranteASP.Mesa>

@{
    ViewBag.Title = "Mesa";
}
    <p class="pt-4">
        @Html.ActionLink("Crear", "Create", null, new { @class = "btn btn-success" })
    </p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idMesa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.capacidadPersona)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MesaEstado.descripcion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.idMesa)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.descripcion)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.capacidadPersona)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MesaEstado.descripcion)
    </td>
    <td>

        @Html.ActionLink("Editar", "Edit", new { id = item.idMesa }, new { @class = "btn btn-warning" })
        @Html.ActionLink("Detalles", "Details", new { id = item.idMesa }, new { @class = "btn btn-info" })
        @Html.ActionLink("Eliminar", "Delete", new { id = item.idMesa }, new { @class = "btn btn-danger" })

        
    </td>
</tr>
    }

</table>

