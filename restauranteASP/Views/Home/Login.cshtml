
@{
    Layout = null;
}

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <link href="//cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="//cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link href="~/Styles/login.css" rel="stylesheet" />
    <title>Restaurante || Inicio de Sesión</title>
</head>
<body>
    <form id="form1" runat="server">
        <div id="login-button">
            <img src="~/Styles/img/login.png" />
        </div>
        <div id="container">
            <br /><br />
            <h1>Restaurante</h1>
        
            <br />
         
            <img class="LabelImagenUsuarioLogin" src="~/Styles/img/user.png" />
            <asp:TextBox ID="txtEmail" CssClass="pruebaTxts" placeholder="Usuario" runat="server"></asp:TextBox>

            <br />
            <img class="LabelImagenPasswordLogin" src="~/Styles/img/lock.png" />
            <asp:TextBox ID="txtPassword" placeholder="Contraseña" CssClass="pruebaTxts" TextMode="Password" runat="server"></asp:TextBox>
            &nbsp;&nbsp;&nbsp;<asp:Label ID="lblError" runat="server" Text="" ForeColor="Red"></asp:Label>
            <asp:Button CssClass="botonregi" ID="btnIngresar" runat="server" Text="Ingresar" OnClick="btnIngresar_Click" />

        </div>

    </form>

    <script>
    $('#login-button').click(function(){
  $('#login-button').fadeOut("slow",function(){
    $("#container").fadeIn();
    TweenMax.from("#container", .4, { scale: 0, ease:Sine.easeInOut});
    TweenMax.to("#container", .4, { scale: 1, ease:Sine.easeInOut});
  });
});

$(".close-btn").click(function(){
  TweenMax.from("#container", .4, { scale: 1, ease:Sine.easeInOut});
  TweenMax.to("#container", .4, { left:"0px", scale: 0, ease:Sine.easeInOut});
  $("#container, #forgotten-container").fadeOut(800, function(){
    $("#login-button").fadeIn(800);
  });
});

/* Forgotten Password */
$('#forgotten').click(function(){
  $("#container").fadeOut(function(){
    $("#forgotten-container").fadeIn();
  });
});
    </script>
</body>
</html>
