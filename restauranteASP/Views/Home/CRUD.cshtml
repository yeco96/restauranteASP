@{
    ViewBag.Title = "Mantenimientos";
}
<link href="~/Styles/CRUDstyles.css" rel="stylesheet" />
    <div class="pt-4">
        <div class="row">
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Mesas</h5>
                        <p class="card-text">Mantenimiento de mesas, las mismas seran visibles a la hora de crear el pedido</p>

                        @Html.ActionLink("IR", "Index", "Mesas", null, new { @class = "btn btn-primary", style = "background-color: #2ecc71; border-radius:10px; margin: text-align:center;  margin-left:120px;  width:200px; height:30px;" })

                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Clientes</h5>
                        <p class="card-text">Mantenimiento de clientes, estos pueden usarse para facturar un pedido</p>
                        @Html.ActionLink("IR", "Index", "Clientes", null, new { @class = "btn btn-primary", style = "background-color: #2ecc71; border-radius:10px; margin: text-align:center;  margin-left:120px;  width:200px; height:30px;" })
                    </div>
                </div>
            </div>
        
        </div>


        <div class="row pt-3">
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Inventario</h5>
                        <p class="card-text">Mantenimiento del inventario, catalogo de articulos, platos y servicios que se pueden facturar</p>

                        @Html.ActionLink("IR", "Index", "Articulo", null, new { @class = "btn btn-primary", style = "background-color: #2ecc71; border-radius:10px; margin: text-align:center; margin-left:120px;  width:200px; height:30px;;" })

                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body" style="height: 208px;">
                        <h5 class="card-title">Pedidos</h5>
                        <p class="card-text">Mantenimiento de Pedidos, se utliza para controlar los pedidos</p>
                        @Html.ActionLink("IR", "Index", "Pedido", null, new { @class = "btn btn-primary", style = "background-color: #2ecc71; border-radius:10px; margin: text-align:center;  margin-left:120px;  width:200px; height:32px; margin-top:28px;" })
                    </div>
                </div>
            </div>
        </div>

    </div>
