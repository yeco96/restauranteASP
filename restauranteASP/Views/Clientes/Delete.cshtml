        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
        </div>
    }
</div>



<div class="pt-2">
    @Html.ActionLink("Volver a la lista", "Index")
</div>
