                        @Html.ActionLink("IR", "Index", "Articulo", null, new { @class = "btn btn-primary", style = "background-color: #2ecc71; border-radius:10px; margin: text-align:center;  margin-left:180px;  width:100px; height:25px;" })

                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="card">
