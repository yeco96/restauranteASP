@{
    ViewBag.Title = "Home Page";
}
<link href="~/Styles/index.css" rel="stylesheet" />

<div style="max-width: 1000px;min-width: 250px;position:relative; margin:auto;">

    <div class="mySlides fade" style="display: block;">

        <a href="#">
            <div class="numbertext">1 / 3</div>
            <img src="~/Styles/img/Slider1.jpg" alt="Slider 1" style="width: 100%" />
        </a>
    </div>

    <div class="mySlides fade" style="display: none;">
        <a href="#">
            <div class="numbertext">2 / 3</div>
            <img src="~/Styles/img/Slider2.jpg" alt="Slider 2" style="width: 100%" />
        </a>

    </div>

    <div class="mySlides fade" style="display: none;">

        <a href="#">
            <div class="numbertext">3 / 3</div>
            <img src="~/Styles/img/Slider3.jpg" alt="Slider 3" style="width:100%" />
        </a>

    </div>

    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>
</div>
<br>

<div style="text-align:center">
    <span class="dot" onclick="currentSlide(1)"></span>
    <span class="dot" onclick="currentSlide(2)"></span>
    <span class="dot" onclick="currentSlide(3)"></span>
</div>


<div class="platillos">
    <h2>Nuestros productos</h2>
    <ul>
        <li><img src="~/Styles/img/Food1.jpg" alt="AC Valhalla"></li>
        <li><img src="~/Styles/img/Food2.jpg" alt="AvengersPS4"></li>
        <li><img src="~/Styles/img/Food3.jpg" alt="MouseRazer"></li>
        <li><img src="~/Styles/img/Food4.jpg" alt="TLOU"></li>
    </ul>
</div>

<script src="~/Styles/Slider.js"></script>