                        @Html.ActionLink("IR", "Index", "Clientes", null, new { @class = "btn btn-primary", style = "background-color: #2ecc71; border-radius:10px; margin: text-align:center;  margin-left:180px;  width:100px; height:25px;" })
                    </div>
                </div>
            </div>
        </div>


        <div class="row pt-3">
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Inventario</h5>
