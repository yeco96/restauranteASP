@{
    ViewBag.Title = "Mantenimientos";
}
<link href="~/Styles/CRUDstyles.css" rel="stylesheet" />
    <div class="pt-4">
        <div class="row">
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Mesas</h5>
                        <p class="card-text">Mantenimiento de mesas, las mismas seran visibles a la hora de crear el pedido</p>

                        @Html.ActionLink("IR", "Index", "Mesas", null, new { @class = "btn btn-primary", style = "background-color: #2ecc71; border-radius:10px; margin: text-align:center;  margin-left:180px;  width:100px; height:25px;" })

                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Clientes</h5>
